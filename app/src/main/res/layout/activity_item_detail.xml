<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/ahorroRed"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.rjstudio.getsome.widget.CnToolbar
        android:background="@color/ahorroBlack"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/toolbar"/>
    <TextView
        android:paddingRight="20dp"
        android:gravity="center|right"
        style="@style/consumeItemStyle"
        android:background="@color/Tan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/tv_amount"
        android:text="@string/test"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:placeholderImage="@mipmap/ic_launcher_round"
            android:id="@+id/iv_item"
            />

        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/test"
            android:id="@+id/tv_type"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/tv_account"
        android:text="@string/test"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/tv_remark"
        android:text="@string/test"/>
    <Button
        android:id="@+id/bu_delete"
        android:text="@string/delete"
        style="@style/consumeItemStyle"
        android:textColor="@color/Tomato"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/Peru"
        android:padding="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>